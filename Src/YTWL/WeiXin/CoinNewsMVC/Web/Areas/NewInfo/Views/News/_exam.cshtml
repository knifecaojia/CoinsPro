@using Common;
@using Web.helper;
@using (Ajax.BeginForm("ExamNews", "News", new { }, new AjaxOptions() { HttpMethod = "Post", OnSuccess = "tips(data)", OnBegin = "ValidateLog" }, new { enctype = "multipart/form-data" }))
{
    <div class="modal fade bs-example-modal-sm" id="myExam" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="z-index:1000">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">审核</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" id="txt_status" name="txt_status" value="0" /> @*用一个隐藏元素保存选中状态*@
                        <input type="hidden" id="ids" name="ids" value="0" /> @*用一个隐藏元素保存选中数据*@
                        <div class="rdo">
                            <input type="radio" name="rdo" class="rdolist" checked="checked" />
                            <label class="rdobox">
                                <span class="check-image"></span>
                                <span class="radiobox-content">@EnumBase.ExamType.未审核.Description()</span>
                            </label>
                            <input type="radio" name="rdo" class="rdolist" />
                            <label class="rdobox">
                                <span class="check-image"></span>
                                <span class="radiobox-content">@EnumBase.ExamType.成功.Description()</span>
                            </label>
                            <input type="radio" name="rdo" class="rdolist" />
                            <label class="rdobox">
                                <span class="check-image"></span>
                                <span class="radiobox-content">@EnumBase.ExamType.失败.Description()</span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                    <button class="btn btn-primary block full-width m-b" id="btn_submit"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>保存</button>
                </div>
            </div>
        </div>
    </div>
}